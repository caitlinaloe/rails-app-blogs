
    <div class='behailu'>
      <div class='mainbody'>
        <h1>HTML from behailu</h1>
        <div id="singuph1">
          <h1>Sign Up</h1>
        </div>
      </div class="fillP">
        <div class="formbox">
          <% if @user.errors.any? %>
            <h1>Please correct the following issues: </h1>
            <%= @user.errors.messages do |key, value | %>
              <p>"#{key}: #{value}"</p>
            <% end %>
          <% end %>
          <%= form_for @user do |form| %>
            Name: <%= form.text_field :name %><br />
            Email : <%= form.text_field :email %><br />
            Phone : <%= form.text_field :phone %><br />
            <%= form.submit %>
          <% end %>
        </div>
      </div>
      <footer>
        @ 2018 Users Sign Up Form. All rights reserved.
      </footer>
    </div>
